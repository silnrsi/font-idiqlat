#---  ccmp feature (pass 3) ---

feature ccmp {  # Glyph Composition/Decomposition
    # Same for latin & syriac:
        lookup FontCheck;
    script latn;
        lookup LatinPunctuation;
    script syrc;
        lookup GPreDecompose;
        lookup SeyameChain;
        lookup LamAlaphLig;
        lookup AlaphLigs;
        lookup RukkakhaSquare;
        lookup RightJoinFina;
} ccmp ;

